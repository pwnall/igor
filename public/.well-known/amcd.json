{
  "methods": {
    "username-password-form": {
      "connect": {
        "method":"POST",
        "path":"/sessions/",
        "params": {
          "username":"user[email]",
          "password":"user[password]"
        }
      },
      "disconnect": {
        "method":"POST",
        "path":"/sessions/logout",
        "params": {
          "username":"user[email]",
          "password":"user[password]"
        }
      },
      "register": {
        "method":"POST",
        "path":"/users/",
        "schemas": {
          "poco":"http://portablecontacts/ns/1.0"
        },
        "params": {
          "username":"user[email]",
          "password":"user[password]",
          "password_verify":"user[password_confirmation]",
          "poco": {
					  "emails": {
						  "value": "user[email]"
						}
          }
        }
      },
      "changepassword": {
        "method":"POST",
        "path":"/user/update_password",
        "params": {
          "username":"user[email]",
          "old_password":"old_pwd",
          "new_password":"pwd",
          "new_password_verify":"pwd2"
        }
      },
      "sessionstatus": {
          "method":"GET",
          "path":"/sessions/1"
      },
      "accountstatus": {
          "method":"GET",
          "path":"/user/account_status"
      }
    }
  }
}
