if @success
  add_site_status page, (@new_record ? 'Assignment created' : 'Assignment updated'), true
  page.replace "assignment_row_#{@div_id}", :partial => 'show', :object => @assignment 
else
  add_site_status page, (@new_record ? 'Failed to create assignment' : 'Failed to update assignment'), false
  page.replace "assignment_row_#{@div_id}", :partial => 'edit', :object => @assignment, :locals => { :div_id => @div_id }   
end