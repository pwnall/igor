<h2>New Assignment</h2>

<%= form_for @assignment, url: polymorphic_path(@assignment,
      course_id: @assignment.course) do |f| %>
  <%= f.error_messages %>
  <%= render 'assignments/fields', f: f %>

  <p class="actions">
    <%= button_tag do %>
      <%= next_step_icon_tag %> Build Assignment
    <% end %>
  </p>
<% end %>
