<% if assignment.deliverables_ready? %>
  <%= form_for assignment, url: assignment_path(assignment,
        course_id: assignment.course), method: :patch do |f| %>
    <%= f.hidden_field :deliverables_ready, value: false %>
    <%= f.button type: :submit, data: { confirm:
          "Un-publish #{assignment.name}? Prepare for hate mail :(" } do %>
      <%= pull_icon_tag %> Pull
    <% end %>
  <% end %>
<% elsif assignment.deliverables.length > 0 %>
  <%= form_for assignment, url: assignment_path(assignment,
        course_id: assignment.course), method: :patch do |f| %>
    <%= f.hidden_field :deliverables_ready, value: true %>
    <%= f.button type: :submit do %>
      <%= ship_icon_tag %> Release
    <% end %>
  <% end %>
<% end %>
