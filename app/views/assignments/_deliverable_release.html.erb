<% if assignment.published? %>
  <%= form_for assignment, url: unpublish_assignment_path(assignment,
        course_id: assignment.course), method: :patch,
        html: { class: 'assignment-pull-form' } do |f| %>
    <%= f.button type: :submit,
          data: { confirm: unpublish_confirmation(assignment) } do %>
      <%= pull_icon_tag %> Pull
    <% end %>
  <% end %>
<% else %>
  <%= form_for assignment, url: publish_assignment_path(assignment,
        course_id: assignment.course), method: :patch,
        html: { class: 'assignment-release-form' } do |f| %>
    <%= f.button type: :submit, data: {
          confirm: 'Students will be able to see this assignment. Continue?' } do %>
      <%= release_icon_tag %> Release
    <% end %>
  <% end %>
<% end %>
