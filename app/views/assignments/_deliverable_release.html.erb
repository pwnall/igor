<% unless assignment.published? %>
  <%= form_for assignment, url: release_assignment_path(assignment,
        course_id: assignment.course), method: :patch,
        html: { class: 'assignment-release-form' } do |f| %>
    <%= f.button type: :submit do %>
      <%= ship_icon_tag %> Release Now
    <% end %>
  <% end %>
<% end %>
