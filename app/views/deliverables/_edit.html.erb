<div id="deliverable_row_<%= div_id %>">
	<% form_for(edit, :html => {:id => "deliverable_#{div_id}"}) do |f| %>
		<div style="display: none;">
			<%= hidden_field_tag :div_id, div_id %>
			<%= f.hidden_field :assignment_id %>
		</div>
		<div class="deliverable_name">
			<div>
    			<%= f.text_field :name, :id => "deliverable_name_#{div_id}" %>
			</div>
			<div style="margin-bottom: 5px;">			
				Filename: <%= f.text_field :filename, :id => "deliverable_filename_#{div_id}", :size => 16 %>
			</div>
			<div style="margin-bottom: 5px;">
				<%= f.check_box :published, :id => "deliverable_published_#{div_id}" %>	Published
			</div>
		</div>
		<div class="deliverable_description">
	    <%= f.text_area :description, :rows => 3 %>
		</div>
		<span>
			<%= link_to_function (edit.new_record? ? 'Create' : 'Update'), remote_function(:url => edit, :with => "Form.serialize('deliverable_row_#{div_id}')") %>
			<% if edit.new_record? %>
				<%= link_to_function "Undo", update_page { |p| p["deliverable_row_#{div_id}"].fade } %> 
			<% else %>
				<%= link_to_remote "Destroy", :url => {:controller => :assignments, :action => :show, :id => edit.id, :div_id => div_id}, :method => :delete %>
			<% end %>
		</span>
		<div class="float_clearer"></div>
	<% end %>
</div>
