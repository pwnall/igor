<% @deliverable = show %>
<div id="deliverable_row_<%= show.id %>">
	<div class="deliverable_name">
  		<div>  			
			<%= in_place_editor_field(:deliverable, :name, {}, :with => "form.serialize() + '&authenticity_token=#{form_authenticity_token}'") %>
		</div>
		<div>
			Filename: <%= in_place_editor_field(:deliverable, :filename, {}, :with => "form.serialize() + '&authenticity_token=#{form_authenticity_token}'", :cols => 16) %>
		</div>
		<div>
			Published: <%= in_place_checkbox :deliverable, :published, :checked => true, :unchecked => false %> 
		</div>
	</div>
	<div class="deliverable_description">
		<%= in_place_editor_field(:deliverable, :description, {}, :with => "form.serialize() + '&authenticity_token=#{form_authenticity_token}'", :rows => 3) %>
	</div>
	<div>
		<%= link_to_remote 'Edit', :url => {:controller => :deliverables, :action => :edit, :id => show.id }, :method => :get %>			
    <%= link_to_remote 'Destroy', :url => show, :confirm => "Removing deliverable #{show.name}. Are you sure?", :method => :delete %>
	</div>
	<div class="float_clearer"></div>
	
<%= render :partial => 'deliverable_validations/show_for_deliverable', :locals => {:deliverable => show } %>
</div>
 
