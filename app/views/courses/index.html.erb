<!-- assignment_metrics/index -->
<div class="full_section">

  <div style="z-index: 10; float: right; width: 100px; text-align: right;">
    <h1 class="full_section">
      <%= link_to 'New', new_course_path %>
    </h1>
  </div>
  <h1 class="full_section" style="margin-right: 100px; ">
    Courses
  </h1>
  
  <table>
    <tr>
      <th style="text-align: left; width: 150px;">Number</th>
      <th style="text-align: left; width: 250px;">Title</th>
      <th style="text-align: left; "></th>
    </tr>
  
  <% for @course in @courses %>
    <tr>
      <td><%= @course.number %></td>
      <td><%= @course.title %></td>
      <td>
        <%= link_to 'Edit', edit_course_path(@course) %>
      </td>
  <% end %>
  </table>
</div>
