<%= form_for(@login || User.new, :url => sessions_url, :method => :post,
            :html => {:class => 'login-form', :id => 'login_form'}) do |f| %>
  <%= f.error_messages %>
	
	<dl>
		<dt><%= f.label :email, 'Email', :for => 'login_email' %></dt>
		<dd>
		  <%= f.text_field :email, :id => 'login_email', :required => true,
		                   :placeholder => 'you@mit.edu' %>
		</dd>
    <dt><%= f.label :password, 'Password', :for => 'login_password' %></dt>
    <dd>
    	<%= f.password_field :password, :id => 'login_password',
    	          :placeholder => 'not your e-mail password' %>
		</dd>
	</dl>
	<p>
		<%= f.submit "Login", :id => 'login_submit' %>
	</p>
<% end %>
