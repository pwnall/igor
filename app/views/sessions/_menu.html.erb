<nav id="menu">
  <ol>
    <li>
      <%= link_to 'Announcements', root_path(:flavor => :announcement) %>
    </li>
    <li>
      <%= link_to 'Homework', root_path(:flavor => :deliverable) %>
    </li>
    <li>
      <%= link_to 'Grades', reveal_mine_grades_path %>
    </li>
    <li>
      <%= link_to 'Surveys', root_path(:flavor => :survey_answer) %>
    </li>
    <% if current_user.admin? %>
    <li>
      <%= link_to 'Teacher' %>
      <%= render 'sessions/admin_menu' %>
    </li>
    <% end %>
    <li>
      <%= link_to current_user do %>
        <%= user_image_tag current_user %>
        <span>
          <%= current_user.email %> &#x25bc;
        </span>
      <% end %>
      <ol>
        <li>
          <%= link_to 'Profile', current_user %>
        </li>
        <li>
          <%= link_to 'Settings', edit_password_user_path(current_user) %>
        </li>
        <li>
          <%= link_to 'Sign out', session_path(current_user), :method => :delete %>
        </li>
      </ul>
    </li>
  </ul>
</nav>

<% if !current_user %>
  <h2>Login</h2>
	<%= render 'sessions/login_form' %>
	
  <h2>Account</h2>
	<ol>
		<li><%= link_to 'Register', new_user_path %></li>
		<li>
			<%= link_to 'Reset password', reset_password_users_path %>
    </li>
	</ol>
<% end %>
