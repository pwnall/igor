<%= f.number_field :scale_min, step: 1, placeholder: '1', required: true,
      class: 'scale-limit', label: 'Low value' %>
<%= f.number_field :scale_max, step: 1, placeholder: '5', required: true,
      class: 'scale-limit', label: 'High value' %>
<%= f.text_field :scale_min_label, placeholder: 'Too easy', required: true,
      maxlength: 64, class: 'scale-label', label: 'Low value text' %>
<%= f.text_field :scale_max_label, placeholder: 'Too hard', required: true,
      maxlength: 64, class: 'scale-label', label: 'High value text' %>

<%= f.hidden_field :type %>
