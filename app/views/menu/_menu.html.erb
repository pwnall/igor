<nav id="menu">
  <ol>
  <% if current_user.admin? %>
<%= render 'menu/admin' %>
  <% else %>
<%= render 'menu/nonadmin' %>
  <% end %>
  
    <li>
      <%= link_to current_user do %>
        <%= user_image_tag current_user %>
        <span>
          <%= current_user.name %> &#x25bc;
        </span>
      <% end %>
      <ol>
        <li>
          <%= link_to 'Profile', current_user %>
        </li>
        <li>
          <%= link_to 'Settings', edit_password_user_path(current_user) %>
        </li>
        <li>
          <%= link_to 'Sign out', session_path, :method => :delete %>
        </li>
      </ul>
    </li>
  </ol>
</nav>
