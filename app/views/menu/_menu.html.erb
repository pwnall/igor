<% if current_course %>
  <%= render "menu/for_#{menu_type(current_user, current_course)}" %>
<% else %>
  <%= render "menu/for_#{menu_type(current_user, nil)}" %>
<% end %>

<li>
  <%= link_to current_user do %>
    <%= user_image_tag current_user %>
    <span>
      <%= current_user.name %> &#x25bc;
    </span>
  <% end %>
  <ol>
    <li>
      <%= link_to 'Profile', current_user %>
    </li>
    <li>
      <%= link_to 'Change Password', change_password_session_path %>
    </li>
    <li>
      <%= link_to 'Sign out', session_path, :method => :delete %>
    </li>
  </ul>
</li>
