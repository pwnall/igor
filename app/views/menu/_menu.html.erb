<%= render menu_type(current_user, current_course) %>

<li>
  <%= link_to current_user do %>
    <%= user_image_tag current_user %>
    <span class="current-user-name">
      <%= current_user.name %>
    </span>
    &#x25bc;
  <% end %>
  <ol>
    <li>
      <%= link_to 'Profile', current_user %>
    </li>
    <li>
      <%= link_to 'Change Password', change_password_session_path %>
    </li>
    <li>
      <%= link_to 'Sign out', session_path, :method => :delete %>
    </li>
  </ul>
</li>
