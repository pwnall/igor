<div class="profile-header">
  <%= render 'profile_photos/for_user', user: @user %>
  <h2 class="title-with-actions">
    <span class="title">
      <%= @user.name %>
    </span>
    <span class="actions">
      <% if @user.profile.can_edit? current_user %>
        <span class="link-button-wrapper">
          <%= link_to edit_user_path(@user), class: 'hollow button' do %>
            <%= edit_icon_tag %> Edit Profile
          <% end %>
        </span>
      <% end %>
    </span>
  </h2>
</div>

<%= render 'profiles/show', profile: @user.profile %>
