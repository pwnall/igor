<h2 class="form_title">Recover username or password</h2>

<%= form_for @user, :url => recovery_email_users_path,
                    :html => {:class => 'signup-form'} do |f| %>
  <dl>
  	<dt><%= f.label :email, 'MIT e-mail' %></dt>
		<dd><%= f.text_field :email %></dd>
  </dl>
	
	<p><%= f.submit "Help!" %></p>
<% end %>
