<section class="register">
<%= form_for user do |f| %>
  <%= f.error_messages %>

  <%= render 'users/new_fields', f: f %>

  <h3>Profile</h3>
  <%= f.fields_for :profile do |pf| %>
  <%= render 'profiles/fields', f: pf %>
  <% end %>

  <h3>Course Registration</h3>
  <%= f.fields_for :registrations do |rf| %>
  <%= render 'registrations/fields', f: rf %>
  <% end %>

  <%= render 'registrations/conflicts', :recitation_conflicts => [] %>

  <p class="actions">
    <%= button_tag class: 'emphasized', type: 'submit' do %>
      Create my account
    <% end %>
  </p>
<% end %>
</section>
