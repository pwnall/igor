<h2><%= @registration.course.number %> Student Registration</h2>

<%= form_for @registration, url: polymorphic_url(@registration,
      course_id: @registration.course) do |f| %>
<%= render 'registrations/fields', f: f %>
<%= render 'registrations/conflicts', conflicts: @recitation_conflicts, f: f %>

<p class="actions">
  <%= f.button class: 'emphasized', type: :submit do %>
    <%= register_icon_tag %> Register for <%= @registration.course.number %>
  <% end %>
</p>
<% end %>
