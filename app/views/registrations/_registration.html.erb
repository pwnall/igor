<table class="registration-info">
  <tr>
    <th>For credit</th>
    <td>
      <%= registration.for_credit? ? 'Yes' : 'No' %>
    </td>
  </tr>
  <tr>
    <th>Publish my work</th>
    <td>
      <%= registration.allows_publishing? ? 'Yes' : 'No' %>
    </td>
  </tr>
  <tr>
    <th>Dropped class</th>
    <td>
      <%= registration.dropped? ? 'Yes' : 'No' %>
    </td>
  </tr>

  <% registration.prerequisite_answers.sort_by(&:prerequisite_id).
                  each do |answer| %>
  <% next if answer.took_course? %>
  <tr>
    <th>
      <%= answer.prerequisite.waiver_question %>
    </th>
    <td>
      <%= answer.waiver_answer %>
    </td>
  </tr>
  <% end %>

  <% if Course.main.has_recitations? %>
  <tr>
    <th>Availability</th>
    <td>
      <table class="timetable" style="width:100%;">
        <thead>
          <tr>
            <th>Time</th>
            <%= render 'registrations/time_slot_days_header' %>
          </tr>
        </thead>
        <tbody>
          <% @time_slot_periods.each do |period| %>
          <tr>
            <th><%= conflict_time_period_label period.first, period.last %></th>
            <% @time_slot_days.each do |day| %>
            <%= conflict_tag @time_slots[period][day], @recitation_conflicts %>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </td>
  </tr>
	<% end %>
</table>
