<section class="fields">
  <p class="field">
    <%= f.label :athena_username, 'Athena username' %>
    <span class="value">
      <%= f.text_field :athena_username, :autocomplete => :off,
              :autofocus => true,
              'data-pwnfx-refresh-url' => websis_lookup_profiles_path,
              'data-pwnfx-refresh-method' => 'POST',
              'data-pwnfx-refresh-target' => 'profile-form-js-container' %>
    </span>
    <span class="comment" id="profile-athena-success">
    </span>
  </p>
  
  <p class="field">
    <%= f.label :name, 'Full name' %>
    <span class="value">
      <%= f.text_field :name, :id => 'profile_name' %>
    </span>
    <span class="comment">
      <span id="profile-form-js-container" />
    </span>
  </p>
  <p class="field">
    <%= f.label :nickname, 'Call me' %>
    <span class="value">
      <%= f.text_field :nickname, :id => 'profile_nickname' %>
    </span>
    <span class="comment" />
  </p>
  <p class="field">
    <%= f.label :university, 'School' %>
    <span class="value">
      <%= f.text_field :university, :id => 'profile_university' %>
    </span>
    <span class="comment" />
  </p>
  <p class="field">
    <%= f.label :department %>
    <span class="value">
      <%= f.text_field :department, :id => 'profile_department' %>
    </span>
    <span class="comment" />
  </p>
  <p class="field">
    <%= f.label :year, 'Year' %>
    <span class="value">
      <%= f.select :year, profile_year_options(f.object), {},
                          :id => 'profile_year' %>
    </span>
    <span class="comment" />
  </p>
  <p class="field">
    <%= f.label :allows_publishing, 'Publish my work' %>
    <span class="value">
      <%= f.check_box :allows_publishing %>
      course staff may publish my homework, and I will be credited
    </span>
    <span class="comment">
    </span>
  </p>

  <p class="field">
    <%= f.label :nickname, 'Phone' %>
    <span class="value">
      <%= f.telephone_field :phone_number, 'id' => 'profile_phone_number' %>
    </span>
    <span class="comment" />
  </p>
  <p class="field">
    <%= f.label :nickname, 'AIM screen name' %>
    <span class="value">
      <%= f.text_field :aim_name %>
    </span>
    <span class="comment" />
  </p>
  <p class="field">
    <%= f.label :nickname, 'Jabber / GTalk' %>
    <span class="value">
      <%= f.text_field :jabber_name %>
    </span>
    <span class="comment" />
  </p>
</section>
