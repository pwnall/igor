<table class="profile-info">
  <tr>
    <th>Athena username</th>
    <td><%= profile.athena_username %></td>
  </tr>
  <tr>
    <th>Full name</th>
  	<td><%= profile.name %></td>
  </tr>
  <tr>
    <th>Call me</th>
    <td><%= profile.nickname %></td>
  </tr>
  <tr>
    <th>School</th>
    <td><%= profile.university %></td>
  </tr>
  <tr>
    <th>Department</th>
    <td><%= profile.department %></td>
  </tr>
  <tr>
  	<th>Year</th>
  	<td><%= profile.year %></td>
  </tr>	
  <% if false %>
  <tr>
    <th>Recitation</th>
  	<td>
    	<%= display_name_for_recitation_section(profile.recitation_section) %>
  	</td>
  </tr>
	<% end %>
	
  <tr>
  	<th>Publish my work</th>
  	<td><%= profile.allows_publishing ? 'Yes' : 'No' %></td>
  </tr>
	
	<% if profile.editable_by_user? current_user %>
	<% if profile.phone_number %>
  <tr>
    <th>Phone</th>
  	<td><%= profile.phone_number %></td>
  </tr>
	<% end %>
  <% if profile.aim_name %>
  <tr>
    <th>AIM</th>
    <td><%= profile.aim_name %></td>
  </tr>
  <% end %>
  <% if profile.jabber_name %>
  <tr>
    <th>Jabber</th>
    <td><%= profile.jabber_name %></td>
  </tr>
  <% end %>
	<% end %>

  <tr>
    <th>About</th>
  	<td><%= profile.about_me %></td>
  </tr>
</table>
