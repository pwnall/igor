<dl class="profile">
  <dt>Athena username</dt>
	<dd><%= profile.athena_username %></dd>
  <dt>Full name</dt>
	<dd><%= profile.real_name %></dd>
  <dt>Call me</dt>
  <dd><%= profile.nickname %></dd>
  <dt>School</dt>
  <dd><%= profile.university %></dd>
  <dt>Department</dt>
  <dd><%= profile.department %></dd>
	<dt>Year</dt>
	<dd><%= profile.year %></dd>
	
  <% if false %>
  <dt>Recitation</dt>
	<dd>
  	<%= display_name_for_recitation_section(profile.recitation_section) %>
	</dd>
	<% end %>
	
	<dt>Publish my work</dt>
	<dd><%= profile.allows_publishing ? 'Yes' : 'No' %></dd>
	
	<% if profile.editable_by_user? current_user %>
	<% if profile.phone_number %>
  <dt>Phone</dt>
	<dd><%= profile.phone_number %></dd>
	<% end %>
  <% if profile.aim_name %>
  <dt>AIM</dt>
  <dd><%= profile.aim_name %></dd>
  <% end %>
  <% if profile.jabber_name %>
  <dt>Jabber</dt>
  <dd><%= profile.jabber_name %></dd>
  <% end %>
	<% end %>

  <dt>About</dt>
	<dd><%= profile.about_me %></dd>
</dl>
