<!DOCTYPE html>
<html>
<head>
<title>
  MIT <%= Course.main.number %>
</title>
<%= csrf_meta_tag %>
<%= favicon_link_tag %>
<%= stylesheet_link_tag :all, :cache => true %>
<%= javascript_include_tag :all, :cache => true %>
<%= render 'layouts/google_analytics' %>
</head>
<body>
<header>
<%= render 'layouts/header' %>
</header>

<div id="content_wrapper">
<article id="main">
<%= render 'layouts/error_bar' %>
<%= yield %>
</article>
<article id="sidebar">
<%= render 'layouts/sidebar' %>
</article>
</div>

<footer>
<%= render 'layouts/footer' %>
</footer>
</body>
</html>
