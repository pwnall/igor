<header>
  <hgroup>
    <h1>
      <%= link_to image_tag('mit-blackred-footer3.gif'), 'http://web.mit.edu' %>
      <span class="course-number">
        <%= link_to Course.main.number, root_path %>
      </span>
    </h1>
  
    <% if @s_user %>
  	<ul class="account-panel">
      <li class="user-name">
        <%= user_image_tag @s_user %>
        <%= link_to @s_user.email, @s_user %>
      </li>
  		<li class="action">
  	    <%= link_to 'Settings', edit_password_user_path(@s_user) %>			
  		</li>
  		<li>
  	    <%= link_to 'Logout', session_path(@s_user), :method => :delete %>			
  		</li>		
  	</ul>
    <% end %>
  </hgroup>
</header>
