<h2>Background Jobs</h2>

<table>
  <thead>
    <tr>
      <th>Created</th>
      <th>Attempts</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= job.created_at.to_s :submission_long %>
      </td>
      <td>
        <%= job.attempts %>
      </td>
      <td>
      <% if job.locked_at %>
        Locked at <%= job.locked_at.to_s :submission_long %>
      <% elsif job.failed_at %>
        Failed at <%= job.failed_at.to_s :submission_long %>
      <% else %>
        Inactive
      <% end %>
      </td>
      <td>
        <%= link_to job_path(job), class: 'button' do %>
          Details
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3"><%= @jobs.length %> total jobs</th>
    </tr>
  </tfoot>
</table>
