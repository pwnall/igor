<%= foundation_form_for submission,
      url: submissions_path(course_id: submission.course),
      html: { multipart: true, class: 'new-submission-form' } do |f| %>
  <% f.object.build_db_file unless f.object.db_file %>
  <%= f.fields_for :db_file do |df| %>
  <%= df.input_group do %>
    <%= df.file_field :f %>
    <%= df.button type: :submit do %>
      <%= upload_icon_tag %> Submit
    <% end %>
  <% end %>
  <% end %>
  <%= f.hidden_field :deliverable_id %>
<% end %>
