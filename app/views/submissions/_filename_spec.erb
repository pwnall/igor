<fieldset class="deliverable-spec">
  <legend>
    <h3>
      <%= label_tag "package_include[#{id}]", class: 'middle' do %>
        <%= check_box_tag "package_include[#{id}]", "1", true, data: {
              pwnfx_hide: "submission_package_#{id}",
              pwnfx_hide_trigger: 'checked' } %> <%= title %>
      <% end %>
    </h3>
  </legend>

  <section class="fields" data-pwnfx-hide-negative="submission_package_<%= id %>">
    <div class="row">
      <div class="small-3 columns">
        <%= label_tag :filename, 'Filename', class: 'text-right' %>
      </div>
      <div class="small-6 columns">
        <p>
          <span id="submission_package_fexample_<%= id %>">
            <span class="optional-text">[prefix]</span>
            <%= basename %>
            <span class="optional-text">[suffix]</span>
            .<%= extension %>
          </span>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <%= label_tag "submission_package_fprefix_#{id}", 'File prefix',
              class: 'text-right middle' %>
      </div>
      <div class="small-6 columns">
        <%= text_field_tag "filename_prefix[#{id}]", default_prefix,
                           id: "submission_package_fprefix_#{id}" %>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <%= label_tag "submission_package_fsuffix_#{id}", 'File suffix',
              class: 'text-right middle'%>
      </div>
      <div class="small-6 columns">
        <%= text_field_tag "filename_suffix[#{id}]", default_suffix,
                           id: "submission_package_fsuffix_#{id}" %>
      </div>
    </div>
  </section>
</fieldset>
